{
  "name": "speckit-status",
  "version": "0.1.0",
  "description": "CLI companion for GitHub Spec Kit - track progress on spec-driven development tasks",
  "type": "module",
  "bin": {
    "speckit-status": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "speckit",
    "spec-kit",
    "spec-driven-development",
    "tasks",
    "cli",
    "llm",
    "ai-coding"
  ],
  "author": "Michał Katański <github@katan.ski>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkatanski/speckit-status.git"
  },
  "bugs": {
    "url": "https://github.com/mkatanski/speckit-status/issues"
  },
  "homepage": "https://github.com/mkatanski/speckit-status#readme",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
